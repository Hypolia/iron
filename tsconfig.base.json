{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@leadcode/auth": ["libs/shared/auth/src/index.ts"],
      "@leadcode/contracts": ["libs/shared/contracts/src/index.ts"],
      "@leadcode/domains/users": ["libs/domains/users/src/index.ts"],
      "@leadcode/enums": ["libs/shared/enums/src/index.ts"],
      "@leadcode/layout": ["libs/pages/layout/src/index.ts"],
      "@leadcode/pages/accounts": ["libs/pages/accounts/src/index.ts"],
      "@leadcode/pages/home": ["libs/pages/home/src/index.ts"],
      "@leadcode/pages/login": ["libs/pages/login/src/index.ts"],
      "@leadcode/routes": ["libs/shared/routes/src/index.ts"],
      "@leadcode/state/store": ["libs/state/store/src/index.ts"],
      "@leadcode/ui": ["libs/shared/ui/src/index.ts"],
      "@leadcode/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
